<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <GridLayout
        android:id="@+id/internal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:layout_width="274dp"
            android:id="@+id/space_confirm"
            android:layout_height="wrap_content"
            android:layout_weight="0.59"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:text="Internal Storage"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="1" />

        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:progress="25"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_disk"
            android:id="@+id/imageView3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_rowSpan="3"/>

    </GridLayout>

    <GridLayout
        android:id="@+id/external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:layout_width="274dp"
            android:id="@+id/external_space_confirm"
            android:layout_height="wrap_content"
            android:layout_weight="0.59"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:text="External Storage"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:id="@+id/external_textView5"
            android:layout_row="1"
            android:layout_column="1" />

        <ProgressBar
            android:id="@+id/external_progress"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:progress="25"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_disk"
            android:id="@+id/external_imageView3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_rowSpan="3"/>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="325dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/folder"
            android:id="@+id/imageButton"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:id="@+id/Download"
            android:layout_height="51dp" />

    </GridLayout>


</LinearLayout>