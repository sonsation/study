<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.study_jh.FileListFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="368dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_height="112dp" />


        <TextView
                android:layout_width="264dp"
                android:text="sdfsdfsdf"
                android:id="@+id/textView6"
                android:layout_height="58dp"
            android:layout_weight="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/my_toolbar"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintBottom_toBottomOf="@+id/my_toolbar"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:text="Clip board"
            android:textSize="15sp"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintRight_toRightOf="@+id/my_toolbar"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            android:layout_marginLeft="8dp"
            android:layout_weight="8"
            tools:layout_editor_absoluteY="56dp"
            app:layout_constraintHorizontal_bias="0.75" />


    <android.support.v4.widget.DrawerLayout
        android:layout_width="368dp"
        android:id="@+id/drawer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="@+id/button2"
        android:layout_height="439dp">

        <ListView
            android:id="@+id/filelistview"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="48sp"
            android:choiceMode="multipleChoice"
            android:layout_height="450dp" />

        <ListView
            android:id="@+id/file_clipboard"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#009688"
            android:layout_gravity="right" />
    </android.support.v4.widget.DrawerLayout>



</android.support.constraint.ConstraintLayout>
