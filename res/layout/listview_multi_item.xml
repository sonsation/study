<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.study_jh.CheckGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <CheckBox
        android:layout_width="50dp"
        android:layout_height="54dp"
        android:id="@+id/checkBox1"
        android:layout_gravity="right"
        android:clickable="false"
        android:focusable="false"
        android:layout_weight="1.88"
        android:visibility="visible"
        android:layout_row="0"
        android:layout_column="2" />

    <ImageView
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:layout_gravity="left"
        android:id="@+id/imageView1"
        android:layout_weight="0.2"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_rowSpan="4"/>

    <TextView
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_flex"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="right"/>

    <TextView
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_column="1" />

</com.example.administrator.study_jh.CheckGridLayout>
