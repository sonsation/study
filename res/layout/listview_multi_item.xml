<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.study_jh.listview.CheckGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="60dp"
    android:weightSum="1">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="left"
        android:id="@+id/imageView1"
        android:layout_weight="0.2"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_rowSpan="3"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="233dp"
        android:layout_height="34dp"
        android:gravity="center|left"
        android:id="@+id/textView1"
        android:textSize="15sp"
        android:layout_row="0"
        android:layout_column="1"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:layout_marginTop="2dp"
        android:layout_height="20dp"
        android:id="@+id/textView_flex"
        android:textSize="13sp"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="center|left"
        android:layout_width="233dp"
        android:layout_marginLeft="2dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/checkBox1"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_rowSpan="3"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"/>

</com.example.administrator.study_jh.listview.CheckGridLayout>
